<?xml version="1.0" encoding="utf-8"?>
<!--Adds a tasks tab to the field service view-->
<odoo>
	<data>
		<record id="hism_template_form_inherit" model="ir.ui.view">
			<field name="name">hism.template.form.inherit</field>
			<field name="model">fsm.template</field>
			<field name="inherit_id" ref="fieldservice.fsm_template_form_view"/>
			<field name="arch" type="xml">
		      <xpath expr="//notebook/page[2]" position="attributes">
		            <attribute name="string">Tasks</attribute>
		      </xpath>
		    </field>
		</record>
	</data>
</odoo>