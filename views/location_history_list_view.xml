<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="search_location_history" model="ir.ui.view">
        <field name="model">fsm.activity</field>
        <field name="arch" type="xml">
            <search>
                <filter name="group_location" string="Location" context="{'group_by':'location_name'}"/>
            </search>
        </field>
    </record>

    <record id="view_location_history" model="ir.ui.view">
        <field name="model">fsm.activity</field>
        <field name="arch" type="xml">
            <tree decoration-bf="name" create="false" edit="true">
                <field name="state" invisible="1"/>
                <field name="fsm_order_id" string="Service Order #" />
                <field name="name" string="Task"/>
                <field name="completed_on" string="Completed On"/>
                <field name="completed_by" string="Completed By" />
                <field name="score" string="Score (Optional)" />
                <field name="notes" />
            </tree>
        </field>
    </record>

    <record id='action_location_history' model='ir.actions.act_window'>
        <field name="name">Location History</field>
        <field name="res_model">fsm.activity</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_location_history" />
<!--        Adds Search View-->
        <field name="search_view_id" ref="search_location_history"/>
<!--        Makes Group By location the default in Search View-->
        <field name="context">{'group_by':'location_name'}</field>
<!--        Filter by only completed tasks-->
        <field name="domain">[('state', '=', 'done')]</field>
        <field name="Location" />
    </record>

    <menuitem name="Location History"
              parent="fieldservice.reporting"
              action="action_location_history"
              sequence="1"
              id="menu_location_history"
    />
</odoo>