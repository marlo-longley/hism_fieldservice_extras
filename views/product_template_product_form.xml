<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hism_product_template_form" model="ir.ui.view">
			<field name="name">hism.product.template.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
                <xpath expr=".//div[@class='oe_title']/h1" position="replace">
<!--					Add class that we then hook to in custom css file-->
					<h1 class="product_title_custom" modifiers="{}">
						<field name="name" placeholder="Product Name" modifiers="{'required':true}"/>
					</h1>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
