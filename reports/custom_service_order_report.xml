<?xml version="1.0" ?>
<odoo>
    <!-- Paperformat is how to set overall margins and orientation on a printed report -->
    <record id="paperformat_no_top_margin"
            model="report.paperformat">
        <field name="name">US Letter</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">1</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="orientation">Portrait</field>
    </record>

    <!-- Specify report elements-->
    <report
            id="custom_service_order_report"
            string="Field Work Order Form"
            menu="True"
            name="hism_fieldservice_extras.custom_service_order_report_template"
            report_type="qweb-pdf"
            model="fsm.order"
            paperformat="paperformat_no_top_margin"
    >
    </report>

    <!--    Link to custom stylesheet for this report -->
    <template id="custom_service_order_report_styles" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/hism_fieldservice_extras/static/css/custom_report.css" rel="stylesheet" type="text/scss"/>
        </xpath>
    </template>

    <!-- Report template-->
    <template id="custom_service_order_report_template">
        <!-- Must use web.basic_layout for correct Bootstrap styles to render in PDF version-->
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <!-- All content must be put inside "page" class div-->
                <div class="page">
                    <div class="row">
                        <!-- Header-->
                        <div class="col-6">
                            <span class="large-font"><b>AWS WORK ORDER</b></span>&#160;
                        </div>
                        <div class="col-6 my-auto">
                            <span><b>Scheduled Start Date:</b>&#160;<span t-esc="context_timestamp(doc.scheduled_date_start).strftime('%m/%d/%Y')"/></span>
                            &#160;&#160;<span><b>Order #:</b></span>&#160;<span t-esc="doc.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <strong>Location Address:</strong><br/>
                            <t t-if="doc.site_name">
                              <span t-esc="doc.site_name"/><br />
                            </t>
                            <t t-if="doc.site_street">
                                <span t-esc="doc.site_street"/><br />
                            </t>
                            <t t-if="doc.site_street2">
                                <span t-esc="doc.site_street2"/><br />
                            </t>
                            <t t-if="doc.site_city">
                                <span t-esc="doc.site_city"/>,
                            </t>
                            <t t-if="doc.site_state">
                                <span t-esc="doc.site_state"/>,
                            </t>
                            <t t-if="doc.site_zip">
                                <span t-esc="doc.site_zip"/>
                            </t>
                        </div>
                        <div class="col-4">
                            <strong>Customer Invoice Address (if different):</strong><br/>
                            <t t-set="related_contacts" t-value="doc.get_sibling_contacts()"/>
                                <t t-foreach="related_contacts.filtered(lambda r: r.type == 'invoice')" t-as="obj" >
                                    <t t-if="obj.name">
                                      <span t-esc="obj.name"/><br />
                                    </t>
                                    <t t-if="obj.street">
                                        <span t-esc="obj.street"/><br />
                                    </t>
                                    <t t-if="obj.street2">
                                        <span t-esc="obj.street2"/><br />
                                    </t>
                                    <t t-if="obj.city">
                                        <span t-esc="obj.city"/>,
                                    </t>
                                    <t t-if="obj.state_id.name">
                                        <span t-esc="obj.state_id.name"/>,
                                    </t>
                                    <t t-if="obj.zip">
                                        <span t-esc="obj.zip"/>
                                    </t>
                                </t>
                        </div>
                        <div class="col-4">
                              <!-- Directions-->
                            <strong>Directions:</strong><br />
                            <t t-raw="doc.site_directions"/>
                        </div>
                    </div>

                    <hr/>

                <!-- Contact methods-->
                    <strong>Contact Methods:</strong><br />
                    <ul class="list-inline">
                        <!-- Call model method to get sibling contacts (entries that share the same owner id) -->
                        <t t-set="related_contacts" t-value="doc.get_sibling_contacts()"/>
                        <t t-foreach="related_contacts" t-as="obj">
                            <!-- Set name var, could be either .name or .display_name-->
                            <t t-if="obj.name">
                                <t t-set="name" t-value="obj.name"/>
                            </t>
                            <t t-else="obj.display_name">
                                <t t-set="name" t-value="obj.display_name"/>
                            </t>
                            <!-- Only load contacts with data in the phone, email, or mobile fields -->
                            <t t-if="obj.phone is not False">
                                <li class="list-inline-item"><strong><span t-esc="name"/><br/></strong><span t-field="obj.phone"/></li>
                            </t>
                            <t t-if="obj.mobile is not False">
                                <li class="list-inline-item"><strong><span t-esc="name"/><br/></strong><span t-field="obj.mobile"/></li>
                            </t>
                            <t t-if="obj.email is not False">
                                <li class="list-inline-item"><strong><span t-esc="name"/><br/></strong><span t-field="obj.email"/></li>
                            </t>
                        </t>
                    </ul>
                    <hr/>

                    <div class="row">
                        <div class="col-6 empty">
                            <strong>Previous Description of Service</strong><br />
                            <div>
                            Date (Scheduled Start Date):
                            <span t-if="doc.last_service_order_id">
                                <span t-esc="doc.last_service_order_date.strftime('%m/%d/%Y')"/>
                                <div t-if="doc.last_service_order_id">
                                    <t t-esc="doc.last_service_order_description"/>
                                </div>
                            </span>
                            <span t-else="doc.last_service_order_id">No prior service orders in the system.</span>
                    </div>
                    </div>
