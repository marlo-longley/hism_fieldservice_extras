                                    <strong><span t-field="obj.street"/></strong>
                                </t>
                        </div>
                        <div class="col-4">
                              <!-- Directions-->
                            <strong>Directions:</strong><br />
                            <t t-raw="doc.site_directions"/>
                        </div>
                    </div>

                    <hr/>


                    <!-- Contact methods-->
                        <strong>Contact Info:</strong><br />
                        <ul>
                            <!-- Call model method to get sibling contacts (entries that share the same owner id) -->
                            <!-- Only load contacts with data in the phone, email, or mobile fields -->
                            <t t-set="related_contacts" t-value="doc.get_sibling_contacts()"/>
                            <t t-foreach="related_contacts.filtered(lambda r: r.phone != False)" t-as="obj" >
                                <li><strong><span t-field="obj.name"/>:&#160;</strong><span t-field="obj.phone"/></li>
                            </t>
                            <t t-foreach="related_contacts.filtered(lambda r: r.mobile != False)" t-as="obj" >
