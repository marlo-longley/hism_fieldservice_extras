<?xml version="1.0" ?>
<odoo>
    <!-- Paperformat is how to set overall margins and orientation on a printed report -->
    <record id="paperformat_no_top_margin"
            model="report.paperformat">
        <field name="name">US Letter</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">1</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="orientation">Portrait</field>
    </record>

    <!-- Specify report elements-->
    <report
            id="custom_service_order_report"
            string="Field Work Order Form"
            menu="True"
            name="hism_fieldservice_extras.custom_service_order_report_template"
            report_type="qweb-pdf"
            model="fsm.order"
            paperformat="paperformat_no_top_margin"
    >
    </report>

    <!--    Link to custom stylesheet for this report -->
    <template id="custom_service_order_report_styles" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/hism_fieldservice_extras/static/css/custom_report.css" rel="stylesheet" type="text/scss"/>
        </xpath>
    </template>

    <!-- Report template-->
    <template id="custom_service_order_report_template">
        <!-- Must use web.basic_layout for correct Bootstrap styles to render in PDF version-->
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <!-- All content must be put inside "page" class div-->
                <div class="page">
                    <div class="row">
                        <!-- Left column-->
                        <div class="col-6">
                                <!-- The company's order Info-->
                                <strong><span t-esc="doc.company_id.name"/></strong><br/>
                                <strong>FS Order #</strong>
                                <span t-field="doc.name"/>
                                <t t-if="doc.template_id">(<span t-field="doc.template_id.name"/>)
                                </t><br/>
                                <strong>Scheduled Start Date:</strong>
                                <span t-esc="context_timestamp(doc.scheduled_date_start).strftime('%m/%d/%Y')"/><br/>
                                <strong>Assigned To:</strong>
                                <span t-field="doc.person_id"/>
                        </div>
                        <!-- Right column-->
                        <div class="col-6">
                            <!-- The client/service location address-->
                            <strong><span t-esc="doc.site_name"/></strong><br />
                            <t t-if="doc.computed_address">
                                <span t-esc="doc.computed_address"/>
                            </t>

                            <!-- Contact methods-->
                            <strong>Contact Info:</strong><br />
                            <ul>
                                <!-- Call model method to get related contacts -->
                                <!-- Only load contacts with data in the phone, email, or mobile fields -->
                                <t t-set="related_contacts" t-value="doc.get_related_contacts()"/>
                                <t t-foreach="related_contacts.filtered(lambda r: r.phone != False)" t-as="obj" >
                                    <li><strong><span t-field="obj.name"/>:&#160;</strong><span t-field="obj.phone"/></li>
                                </t>
                                <t t-foreach="related_contacts.filtered(lambda r: r.mobile != False)" t-as="obj" >
                                    <li><strong><span t-field="obj.name"/>:&#160;</strong><span t-field="obj.mobile"/></li>
                                </t>
                                <t t-foreach="related_contacts.filtered(lambda r: r.email != False)" t-as="obj" >
                                    <li><strong><span t-field="obj.name"/>:&#160;</strong><span t-field="obj.email"/></li>
                                </t>
                            </ul>
                        </div>
                    </div>

                    <!-- Directions-->
                    <strong>Directions:</strong><br />
                    <t t-raw="doc.site_directions"/>

                    <hr/>

                    <!-- Last Service Date-->
                        <p><strong>Last Service Date (Scheduled Start Date): &#160;</strong></p>
                        <span t-if="doc.last_service_order_id"><span t-esc="doc.last_service_order_date" options="{'format': 'DD/MM/YYYY'}"/></span>
                        <span t-else="doc.last_service_order_id">No prior service orders in the system.</span>

                    <!-- Last Service Table with completed tasks -->
                    <t t-if="doc.last_service_order_id">
                        <t t-set="task_data" t-value="doc.get_last_tasks()"/>
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Service Order</th>
                                        <th scope="col">Task Name</th>
                                        <th scope="col">Completed On</th>
                                        <th scope="col">Completed By</th>
                                        <th scope="col">Score</th>
                                        <th scope="col">Notes</th>
                                    </tr>
                                </thead>
                            <tbody>
                                <t t-foreach="task_data" t-as="task">
                                    <tr>
                                        <td>
                                            <span t-esc="doc.last_service_order_name"/>
                                        </td>
                                        <td>
                                            <span t-esc="task.name"/>
                                        </td>
                                        <td>
                                            <span t-field="task.completed_on" options="{'format': 'DD/MM/YYYY'}"/>
                                        </td>
                                        <td>
                                            <span t-field="task.completed_by"/>
                                        </td>
                                        <td>
                                            <span t-field="task.score"/>
                                        </td>
                                        <td>
                                            <span t-field="task.notes"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <hr/>

                    <!-- Table with water tests with space for written results -->
                    <div t-if="doc.order_activity_ids" id="activities">
                        <t t-set="activity_data" t-value="doc.get_activity_data()"/>
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Hardness</th>
                                    <th scope="col">pH</th>
                                    <th scope="col">TDS</th>
                                    <th scope="col">Iron</th>
                                    <th scope="col">Chlorine</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                    <td>&#160;</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>